@model IEnumerable<YanNote.Models.Rem>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Reminder list</h2>
            </div>
        </div>

        <br /><br />

        @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Note title
                    </th>
                    <th>
                        Event date
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="30%">@obj.Note.Title</td>
                    <td width="30%">@obj.EventDate.ToString("dd MMMM yyyy, HH:mm")</td>

                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Rem" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2"
                               data-toggle="tooltip" data-placement="top" title="Edit">
                                <i class="fas fa-edit"></i>
                                
                            </a>
                            <a asp-controller="Rem" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2"
                               data-toggle="tooltip" data-placement="top" title="Delete">
                                <i class="far fa-trash-alt"></i>
                               
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No reminder exists.</p>
    }

    </div>

