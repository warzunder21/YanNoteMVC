@model YanNote.Models.ViewModels.NoteVM

<form method="post" asp-action="Edit">
    <input asp-for="Note.Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit note</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Note.Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Note.Title" class="form-control" />
                        <span asp-validation-for="Note.Title" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Note.Text"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Note.Text" class="form-control"></textarea>
                        <span asp-validation-for="Note.Text" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Tags</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="NoteTags" asp-items="@Model.TagSelectList" class="form-control"></select>
                        
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Edit" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}